
	<div class="row">
		<div class="large-12 columns">
			<h1 class="docs header">CrowdFUNding</h1>
			<h4 class="subheader">Have you ever said, "I would pay money to see that"?  Well now you can!</h4>
		</div>
	</div>
	<!-- Using only the large-block-grid -->
	<div class="row">
		<ul class="small-block-grid-4 small-centered">
			<% @dares.each do |dare| %>
		  	<li><a href="/dares/<%=dare.id%>"><img src="http://img.youtube.com/vi/<%=dare.url %>/0.jpg"></a>
		  		<a href="/dares/<%=dare.id%>"><h3><%=dare.title%></h3></a>
		  		<a href="/users/<%=dare.user.id%>"><%=dare.user.name%></a>
		  		<blockquote><%=dare.description%></blockquote>
		  		<p><%=number_to_currency(dare.current_price, :unit => '$')%> out of $<%=number_to_currency(dare.target_price, :unit => '$')%> has been raised for this dare.</p> 
		  	</li>
		  	<%end%>
		</ul>
	</div>
